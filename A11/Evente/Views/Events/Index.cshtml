@model IEnumerable<Evente.Models.Event>
@{
    ViewData["Title"] = "Events";
}

<!-- Hero Section with Navigation -->
<div class="events-hero-section">
    <nav class="navbar">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-ticket-alt"></i> Eventick
            </a>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="/Events" class="active">Events</a>
                <a href="/#about">About Us</a>
                <a href="/#footer">Contact</a>
                <div class="auth-buttons">
                    <a href="/Identity/Account/Login" class="login-btn">Login</a>
                    <a href="/Identity/Account/Register" class="signup-btn">Sign Up</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="events-hero-content">
            <h1>Discover Events</h1>
            <p>Find amazing events happening around you</p>
        </div>
    </div>
</div>

<!-- Events Section -->
<section class="events-section">
    <div class="container">
        <div class="section-header">
            <h2>Upcoming Events</h2>
            <div class="filter-group">
                <div class="custom-select">
                    <select id="weekdays">
                        <option value="">All Days</option>
                        <option value="monday">Monday</option>
                        <option value="tuesday">Tuesday</option>
                        <option value="wednesday">Wednesday</option>
                        <option value="thursday">Thursday</option>
                        <option value="friday">Friday</option>
                        <option value="saturday">Saturday</option>
                        <option value="sunday">Sunday</option>
                    </select>
                    <i class="fas fa-chevron-down"></i>
                </div>

                <div class="custom-select">
                    <select id="eventType">
                        <option value="">Event Type</option>
                        <option value="party">Party</option>
                        <option value="festival">Festival</option>
                        <option value="concert">Concert</option>
                        <option value="cinema">Cinema</option>
                        <option value="other">Other</option>
                    </select>
                    <i class="fas fa-chevron-down"></i>
                </div>

                <div class="custom-select">
                    <select id="category">
                        <option value="">Any Category</option>
                        <option value="afro">Afro House</option>
                        <option value="techno">Techno</option>
                        <option value="albanian">Albanian Music</option>
                        <option value="pop">Pop</option>
                        <option value="other">Other</option>
                    </select>
                    <i class="fas fa-chevron-down"></i>
                </div>
            </div>
        </div>

        <!-- Events Grid -->
        <div class="events-grid">
            <!-- Event 1: Keinemusik Tirana -->
            <div class="event-card" data-weekday="friday" data-event-type="party" data-category="afro">
                <img src="~/images/keinemusik.jpg" alt="Keinemusik Tirana" onerror="this.onerror=null;this.src='~/images/event-default.jpg';">
                <div class="event-content">
                    <div class="event-header">
                        <h3>Keinemusik Tirana</h3>
                        <span class="price">80€</span>
                    </div>
                    <p>Experience the unique sound of Keinemusik in Tirana.</p>
                    <div class="event-info">
                        <p>May 31, 2025</p>
                        <p>Tirana, Albania</p>
                    </div>
                    <a href="@Url.Action("Details", "Events", new { id = 101 })" class="btn-buy-ticket">Buy Ticket</a>
                </div>
            </div>

            <!-- Event 2: Colorday Festival -->
            <div class="event-card" data-weekday="saturday" data-event-type="festival" data-category="other">
                <img src="~/images/colorday.jpg" alt="Colorday Festival" onerror="this.onerror=null;this.src='~/images/event-default.jpg';">
                <div class="event-content">
                    <div class="event-header">
                        <h3>Colorday Festival</h3>
                        <span class="price">70€</span>
                    </div>
                    <p>Experience the most colorful festival of the year.</p>
                    <div class="event-info">
                        <p>June 14, 2025</p>
                        <p>Tirana, Albania</p>
                    </div>
                    <a href="@Url.Action("Details", "Events", new { id = 102 })" class="btn-buy-ticket">Buy Ticket</a>
                </div>
            </div>
            <!-- Event 3: Alpha Show -->
