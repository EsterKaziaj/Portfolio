@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background: linear-gradient(135deg, #e53e3e 0%, #9f7aea 100%);
        min-height: 100vh;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        padding: 3rem;
        width: 100%;
        max-width: 900px;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .login-title {
        color: #2d3748;
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #e53e3e, #9f7aea);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .login-subtitle {
        color: #718096;
        text-align: center;
        margin-bottom: 2.5rem;
        font-size: 1.1rem;
    }

    .form-section {
        background: rgba(255, 255, 255, 0.7);
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .section-title {
        color: #2d3748;
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .form-floating {
        position: relative;
        margin-bottom: 1.5rem;
    }

        .form-floating input {
            width: 100%;
            padding: 1rem 1.25rem;
            font-size: 1rem;
            border: 2px solid rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.9);
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

            .form-floating input:focus {
                outline: none;
                border-color: #9f7aea;
                box-shadow: 0 0 0 3px rgba(159, 122, 234, 0.1);
                transform: translateY(-2px);
            }

        .form-floating label {
            position: absolute;
            top: 50%;
            left: 1.25rem;
            transform: translateY(-50%);
            color: #718096;
            font-size: 1rem;
            transition: all 0.3s ease;
            pointer-events: none;
            background: transparent;
        }

        .form-floating input:focus + label,
        .form-floating input:not(:placeholder-shown) + label {
            top: 0.25rem;
            font-size: 0.875rem;
            color: #9f7aea;
            font-weight: 500;
        }

    .checkbox {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
        padding: 1rem;
        background: rgba(159, 122, 234, 0.1);
        border-radius: 12px;
        border: 1px solid rgba(159, 122, 234, 0.2);
    }

        .checkbox label {
            display: flex;
            align-items: center;
            color: #4a5568;
            font-weight: 500;
            cursor: pointer;
            margin: 0;
        }

        .checkbox input {
            margin-right: 0.75rem;
            width: 1.2rem;
            height: 1.2rem;
            accent-color: #9f7aea;
        }

    .btn-primary {
        background: linear-gradient(135deg, #e53e3e, #9f7aea);
        border: none;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 12px;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 8px 16px rgba(159, 122, 234, 0.3);
        text-transform: none;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 24px rgba(159, 122, 234, 0.4);
            background: linear-gradient(135deg, #c53030, #805ad5);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

    .external-login-btn {
        background: rgba(255, 255, 255, 0.9);
        border: 2px solid rgba(159, 122, 234, 0.3);
        color: #9f7aea;
        padding: 0.75rem 1.5rem;
        margin: 0.5rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .external-login-btn:hover {
            background: #9f7aea;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(159, 122, 234, 0.3);
        }

    .links-section {
        text-align: center;
        margin-top: 2rem;
    }

        .links-section a {
            color: #9f7aea;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            margin: 0.25rem;
        }

            .links-section a:hover {
                color: #805ad5;
                background: rgba(159, 122, 234, 0.1);
                transform: translateY(-1px);
            }

    .text-danger {
        color: #e53e3e;
        font-size: 0.875rem;
        font-weight: 500;
        margin-top: 0.5rem;
        display: block;
    }

    .validation-summary {
        background: rgba(229, 62, 62, 0.1);
        border: 1px solid rgba(229, 62, 62, 0.3);
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

    hr {
        border: none;
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(159, 122, 234, 0.3), transparent);
        margin: 1.5rem 0;
    }

    @@media (max-width: 768px) {
        .login-card {
            padding: 2rem 1.5rem;
            margin: 1rem;
        }

        .login-title {
            font-size: 2rem;
        }

        .row {
            flex-direction: column;
        }

        .col-md-6 {
            margin-top: 2rem;
        }
    }
</style>

<div class="login-container">
    <div class="login-card">
        <h1 class="login-title">@ViewData["Title"]</h1>
        <p class="login-subtitle">Welcome back! Please sign in to your account</p>

        <div class="row">
            <div class="col-md-6">
                <section class="form-section">
                    <form id="account" method="post">
                        <h2 class="section-title">Use a local account to log in</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>

                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" " />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder=" " />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>

                        <div class="links-section">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>

            <div class="col-md-6">
                <section class="form-section">
                    <h3 class="section-title">Use another service to log in</h3>
                    <hr />
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                        article
                                        about setting up this ASP.NET application to support logging in via external services
                                    </a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div style="text-align: center;">
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="external-login-btn" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"   />
}